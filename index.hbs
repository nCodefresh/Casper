{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="main-header {{#if @blog.cover}}"
        style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <nav class="main-nav overlay clearfix">

        {{#if @blog.logo}}
            <a class="blog-logo" href="http://codefresh.io">
                <img src="{{@blog.logo}}" alt="Blog Logo" />
            </a>
        {{/if}}

        {{#if @blog.navigation}}
            <a class="menu-button" href="#">
                <span class="burger">&#9776;</span>
                <span class="word">Menu</span>
            </a>
        {{/if}}

        <ul class="navbar">
            <li class="navbar-item">
                <a href="http://codefresh.io/product">Product</a>
            </li>
            <li class="navbar-item new">
                <a href="http://codefresh.io/labs">Labs</a>
            </li>
            <li class="navbar-item">
                <a href="http://codefresh.io/contact">Contact us</a>
            </li>
            <li class="navbar-item active">
                <a href="http://blog.codefresh.io">Blog</a>
            </li>
        </ul>
    </nav>


    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title">{{@blog.title}}</h1>
            <h2 class="page-description">{{@blog.description}}</h2>
            <a href="//codefresh.io/?signup=open"
               class="btn-signup"
               target="_blank">
                Sign up for our private beta
            </a>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45">
        <span class="hidden">Scroll Down</span>
    </a>
</header>

{{! The main content area on the homepage }}
<main id="content" class="content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>
